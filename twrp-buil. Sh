#!bin/bash

# Go to the working directory
mkdir ~/rw && cd ~/rw

# Configure git
git config --global user.email "jhonludev@gmail.com"
git config --global user.name "jhonlu"
git config --global color.ui false

# Sync the source
repo init --depth=1 -u git://github.com/RedWolfRecovery/rw_manifest.git -b rw
repo sync  -f --force-sync --no-clone-bundle --no-tags -j$(nproc --all)

# Clone device tree and common tree
git clone https://github.com/honluciano/omni_device_xiaomi_merlin.git  device/xiaomi/merlin
export ALLOW_MISSING_DEPENDENCIES=true; . build/envsetup.sh; lunch omni_merlin-eng; make -j$(nproc --all) recoveryimage
